# EditorConfig is awesome: https://EditorConfig.org
# Uses editorconfig to maintain consistent coding styles

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{tf,tfvars}]
indent_style = space
indent_size = 2
tab_width = 2

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml,json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 0
insert_final_newline = true

[Dockerfile*]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.gitignore]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
